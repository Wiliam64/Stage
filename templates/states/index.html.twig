{% extends 'base.html.twig' %}

{% block title %}Etats{% endblock %}

{% block body %}
    <h1 class="h3 mb-2 text-gray-800">Etats</h1>
          <p class="mb-4">Lorem ipsum.Lorem ipsum.Lorem ipsum.Lorem ipsum.Lorem ipsum.</p>

    <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Etats</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Intéragir</th>
            </tr>
        </thead>
        <tbody>
        {% for state in states %}
            <tr>
                <td>{{ state.id }}</td>
                <td>{{ state.name }}</td>
                <td>{{ state.description }}</td>
                <td>
                    <a href="{{ path('states_show', {'id': state.id}) }}">Voir</a>
                    <a href="{{ path('states_edit', {'id': state.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune entrée trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('states_new') }}">Créer une nouvelle entrée</a>
{% endblock %}
