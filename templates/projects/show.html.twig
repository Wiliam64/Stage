{% extends 'base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
<h1 class="h3 mb-2 text-gray-800">Projets</h1>
          <p class="mb-4">Lorem ipsum.Lorem ipsum.Lorem ipsum.Lorem ipsum.Lorem ipsum.</p>

    <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">{{project.name}}</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
        </tbody>
    </table>

<div style="display: flex; align-self:center;">
        <a href="{{ path('projects_index') }}" class="btn">Retour à la liste</a>
        <a href="{{ path('projects_edit', {'id': project.id}) }}" class="btn">Modifier</a>
        {{ include('projects/_delete_form.html.twig') }}
    </div>


    <h2>Index des équipements</h2>
    <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Equipements</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Init</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipment in equipments %}
            <tr>
                <td>{{ equipment.id }}</td>
                <td>{{ equipment.name }}</td>
                <td>{{ equipment.init }}</td>
                <td>
                    <a href="{{ path('equipments_show', {'id': equipment.id}) }}">Voir</a>
                    <a href="{{ path('equipments_edit', {'id': equipment.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune entrée trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>    

    <a href="{{ path('equipments_new') }}">Créer une nouvelle entrée</a>


{% endblock %}