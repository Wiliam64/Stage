{% extends 'base.html.twig' %}

{% block title %}Equipments
{% endblock %}

{% block body %}
	<h1>Equipments</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ equipment.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ equipment.name }}</td>
			</tr>
			<tr>
				<th>Init</th>
				<td>{{ equipment.init }}</td>
			</tr>
		</tbody>
	</table>

	<div style="display: flex; align-self:center;">
		<a href="{{ path('projects_show', {'id': equipment.project.id}) }}" class="btn">Retour au projet</a>
		<a href="{{ path('equipments_edit', {'id': equipment.id}) }}" class="btn">Modifier</a>
		{{ include('equipments/_delete_form.html.twig') }}
	</div>

{% endblock %}
