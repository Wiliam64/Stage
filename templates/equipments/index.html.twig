{% extends 'base.html.twig' %}

{% block title %}Equipments index{% endblock %}

{% block body %}
    <h1>Liste des équipments</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Init</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipment in equipments %}
            <tr>
                <td>{{ equipment.id }}</td>
                <td>{{ equipment.name }}</td>
                <td>{{ equipment.init }}</td>
                <td>
                    <a href="{{ path('equipments_show', {'id': equipment.id}) }}">Voir</a>
                    <a href="{{ path('equipments_edit', {'id': equipment.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune entrée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
